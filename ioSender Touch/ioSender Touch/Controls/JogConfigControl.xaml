<UserControl x:Class="ioSenderTouch.Controls.JogConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ioSenderTouch.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="260" d:DesignWidth="300">
    <UserControl.Resources>
        <controls:BoolToVisibleConverter x:Key="IsVisibleConverter" />
        <controls:LogicalNotConverter x:Key="BooleanNotConverter" />
    </UserControl.Resources>
    <GroupBox x:Uid="grp_kbdJogging" x:Name="grpJog" Header="Keyboard jogging" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="300">
        <StackPanel HorizontalAlignment="Left" Height="Auto" Margin="0,3,0,0" VerticalAlignment="Top">
            <StackPanel x:Uid="pnl_kbdJogging" Orientation="Horizontal" Visibility="{Binding Path=IsGrbl, Converter={StaticResource IsVisibleConverter}}" ToolTip="Warning! - Grbl has outstanding bug(s) in jog cancel (on key up).">
                <CheckBox x:Uid="lbl_enable" Content="Enable" IsChecked="{Binding Path=Measurement.KeyboardEnable, Mode=TwoWay}" Margin="160,3,0,3"/>
                <Image HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Source="Resources/StatusAnnotations_Warning_16xLG_color.png"/>
            </StackPanel>
            <controls:NumericField x:Uid="fld_fastFeedrate" Label="Fast feedrate:" ColonAt="160" Unit="{Binding Unit, StringFormat={}{0}/min}" Format="###0" Value="{Binding Path=Measurement.FastFeedrate, Mode=TwoWay}"/>
            <controls:NumericField x:Uid="fld_fastDistance" Label="Fast distance:" ColonAt="160" Unit="{Binding Unit}" Value="{Binding Path=Measurement.FastDistance, Mode=TwoWay}" />
            <controls:NumericField x:Uid="fld_slowFeedrate" Label="Slow feedrate:" ColonAt="160" Unit="{Binding Unit, StringFormat={}{0}/min}" Format="###0" Value="{Binding Path=Measurement.SlowFeedrate, Mode=TwoWay}"/>
            <controls:NumericField x:Uid="fld_slowDistance" Label="Slow distance:" ColonAt="160" Unit="{Binding Unit}" Value="{Binding Path=Measurement.SlowDistance, Mode=TwoWay}" />
            <controls:NumericField x:Uid="fld_stepFeedrate" Label="Step feedrate:" ColonAt="160" Unit="{Binding Unit, StringFormat={}{0}/min}" Format="###0" Value="{Binding Path=Measurement.StepFeedrate, Mode=TwoWay}"/>
            <CheckBox x:Uid="lbl_linkStepToUi" Content="Link step distance to UI jogging" IsChecked="{Binding Path=Measurement.LinkStepJogToUI, Mode=TwoWay}" Margin="50,3,0,3"/>
            <controls:NumericField x:Uid="fld_stepDistance" Label="Step distance:" ColonAt="160" Unit="{Binding Unit}" Value="{Binding Path=Measurement.StepDistance, Mode=TwoWay}" IsEnabled="{Binding Path=Measurement.LinkStepJogToUI, Converter={StaticResource BooleanNotConverter}}" />
        </StackPanel>
    </GroupBox>
</UserControl>
