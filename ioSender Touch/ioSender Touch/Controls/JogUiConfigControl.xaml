<UserControl x:Class="ioSenderTouch.Controls.JogUiConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ioSenderTouch.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="265" d:DesignWidth="300">
    <GroupBox x:Uid="grp_uiJogging" x:Name="grp_uiJog" Header="UI jogging" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="300">
        <StackPanel HorizontalAlignment="Left" Height="Auto" Margin="0,3,0,0" VerticalAlignment="Top">
            <controls:NumericField x:Uid="lbl_distance3" Label="Distance 3:" ColonAt="160" Unit="{Binding Distance}" Format="###0.0##" Value="{Binding Path=Measurement.Distance3, Mode=TwoWay}"/>
            <controls:NumericField x:Uid="lbl_distance2" Label="Distance 2:" ColonAt="160" Unit="{Binding Distance}" Format="###0.0##" Value="{Binding Path=Measurement.Distance2, Mode=TwoWay}"/>
            <controls:NumericField x:Uid="lbl_distance1" Label="Distance 1:" ColonAt="160" Unit="{Binding Distance}" Format="###0.0##" Value="{Binding Path=Measurement.Distance1, Mode=TwoWay}"/>
            <controls:NumericField x:Uid="lbl_distance0" Label="Distance 0:" ColonAt="160" Unit="{Binding Distance}" Format="###0.0##" Value="{Binding Path=Measurement.Distance0, Mode=TwoWay}"/>
            <controls:NumericField x:Uid="lbl_feedrate3" Label="Feedrate 3:" ColonAt="160" Unit="{Binding Distance,StringFormat={}{0}/min}" Format="####0" Value="{Binding Path=Measurement.Feedrate3, Mode=TwoWay}"/>
            <controls:NumericField x:Uid="lbl_feedrate2" Label="Feedrate 2:" ColonAt="160" Unit="{Binding Distance, StringFormat={}{0}/min}" Format="####0" Value="{Binding Path=Measurement.Feedrate2, Mode=TwoWay}"/>
            <controls:NumericField x:Uid="lbl_feedrate1" Label="Feedrate 1:" ColonAt="160" Unit="{Binding Distance,StringFormat={}{0}/min}" Format="####0" Value="{Binding Path=Measurement.Feedrate1, Mode=TwoWay}"/>
            <controls:NumericField x:Uid="lbl_feedrate0" Label="Feedrate 0:" ColonAt="160" Unit="{Binding Distance, StringFormat={}{0}/min}" Format="####0" Value="{Binding Path=Measurement.Feedrate0, Mode=TwoWay}"/>
        </StackPanel>
    </GroupBox>
</UserControl>
