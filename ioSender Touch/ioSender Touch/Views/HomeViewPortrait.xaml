<UserControl x:Class="ioSenderTouch.Views.HomeViewPortrait"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:ioSenderTouch.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:ioSenderTouch.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:GrblViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             Focusable="True">

    <UserControl.Resources>
        <system:String x:Uid="str_msgWait" x:Key="MsgWaiting">Waiting for controller ({0})...</system:String>
        <system:String x:Uid="str_msgNoCommAlarm" x:Key="MsgNoCommAlarm">Controller is not able to communicate due to alarm {0}, attempting a soft reset.</system:String>
        <system:String x:Uid="str_msgResetFailed" x:Key="MsgResetFailed">Controller soft reset failed, exiting.</system:String>
        <system:String x:Uid="str_msgEStop" x:Key="MsgEStop">E-Stop active! - clear before continuing...</system:String>
        <system:String x:Uid="str_msgEStopExit" x:Key="MsgEStopExit">E-Stop still active, exit?</system:String>
        <system:String x:Uid="str_msgHome" x:Key="MsgHome">Homing cycle required, &lt;Home&gt; to continue</system:String>
        <system:String x:Uid="str_msgDoorOpen" x:Key="MsgDoorOpen">Door is open, close door and continue?</system:String>
        <system:String x:Uid="str_msgDoorExit" x:Key="MsgDoorExit">Door is still open, exit?</system:String>
        <system:String x:Uid="str_msgDoorPersist" x:Key="MsgDoorPersist">Door state cannot be cleared with &lt;Reset&gt;</system:String>
        <system:String x:Uid="str_msgNoComm" x:Key="MsgNoComm">Controller is in {0} state and cannot respond, try a soft reset?</system:String>
        <system:String x:Uid="str_msgResetExit" x:Key="MsgResetExit">Controller soft reset failed, exiting.</system:String>
        <system:String x:Uid="str_msgNoResponse" x:Key="MsgNoResponse">Controller is not responding!</system:String>
        <local:BoolToNotVisibleConverter x:Key="BoolToNotVisibleConverter"/>
        <local:BoolToVisibleConverter x:Key="IsVisibleConverter" />
    </UserControl.Resources>
    <DockPanel Name="DockPanelMain">
        <Border Height="35"  BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Job" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  
                        Command="{Binding HomeViewModel.ChangeView}" CommandParameter="jobView"
                        Width="140" Margin="1,0,1,0" ></Button>
                <Button Content="Probe" Visibility="{Binding  Path= HasProbing,Converter={StaticResource IsVisibleConverter}}" 
                        Command="{Binding HomeViewModel.ChangeView}" CommandParameter="probeView"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"   Width="140" Margin="1,0,1,0" ></Button>
                <Button Content="SD Card" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  
                        Command="{Binding HomeViewModel.ChangeView}" CommandParameter="offsetView"
                        Visibility="{Binding  Path= HasSDCard,Converter={StaticResource IsVisibleConverter}}"
                        Width="140" Margin="1,0,1,0" ></Button>
                <Button Content="Offset" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                        Command="{Binding HomeViewModel.ChangeView}" CommandParameter="sdCardView" 
                        Width="140" Margin="1,0,1,0" ></Button>
                <Button Content="Utility" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                        Command="{Binding HomeViewModel.ChangeView}" CommandParameter="utilityView"
                        Width="140" Margin="1,0,1,0" ></Button>
                <Button Content="Tools" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"   
                        Visibility="{Binding  Path= HasToolTable,Converter={StaticResource IsVisibleConverter}}"
                        Command="{Binding HomeViewModel.ChangeView}" CommandParameter="toolView"
                        Width="140" Margin="1,0,1,0" ></Button>
                <Button Content="Grbl Settings" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                        Command="{Binding HomeViewModel.ChangeView}" CommandParameter="grblSettingsView"
                        Width="140" Margin="1,0,1,0"  ></Button>
                <Button Content="App Settings" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                        Command="{Binding HomeViewModel.ChangeView}" CommandParameter="appSettingsView"
                        Width="140" Margin="1,0,1,0" ></Button>
            </StackPanel>
        </Border>
        <Border Name="MainControlBorder" Height="325"  BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Bottom">
            <StackPanel Name="MainStackPanel"  Orientation="Horizontal" Margin="0,0,0,0" >
                <local:MDIControl Grid.Row="2" x:Name="MdiControl" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Width="380" Height="Auto" Margin="5,0,0,5"/>
                <local:DROControl x:Name="DRO" Width="290" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="3,3,0,5"  VerticalContentAlignment="Stretch"/>
                <local:JogControl x:Name="jogControl" Width="390" Margin="3,3,0,5" Height="Auto" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />
            </StackPanel>
        </Border>
        <Border Name="LeftBorder" BorderBrush="Black" BorderThickness="1" Width="Auto" DockPanel.Dock="Left">
            <Expander  materialDesign:ExpanderAssist.VerticalHeaderPadding="0,10,0,5"
                      ExpandDirection="Right" >
                <Grid DockPanel.Dock="Left" Width="235">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" VerticalAlignment ="Top"  HorizontalAlignment="Stretch" Height="35" >
                        <Button  Name="btnShowConsole"   Command="{Binding HomeViewModel.SwitchConsoleCommand}"  
                                 Content="{Binding HomeViewModel.ConsoleModeText}"
                                 Visibility="{Binding Path=IsFileLoaded, Converter= {StaticResource IsVisibleConverter}}"/>
                    </StackPanel>
                    <local:ConsoleControl Grid.Row="1" x:Name="ConsoleDisplayControl" HorizontalAlignment="Stretch"   VerticalAlignment="Stretch"
                                          Visibility="{Binding Path= HomeViewModel.ShowGCodeConsole, Converter= {StaticResource BoolToNotVisibleConverter}}"
                                          Margin="2,5,0,5" />
                    <local:GCodeListControl  ShowScrollBar="True" Grid.Row="1" x:Name ="CodeListControl" 
                                                HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="2,5,0,10" 
                                                Visibility="{Binding Path= HomeViewModel.ShowGCodeConsole, Converter= {StaticResource IsVisibleConverter}}"/>
                </Grid>
            </Expander>
        </Border>
        <Border Name="RightMenuBorder" BorderBrush="Black" BorderThickness="1" Width="250" DockPanel.Dock="Right">
            <StackPanel Name ="RightStackPanel">
                <!--<local:JobControl x:Name="GCodeSender" Margin="3,3,0,5" Width="244" Height="245" VerticalAlignment="Top"/>-->
                <local:CoolantControl x:Name="coolantControl" Margin="3,5,3,3"   VerticalAlignment="Top" Height="150" Width="Auto"/>
                <local:UtilityMacroControl Margin="3,5,3,3" Height="150" ></local:UtilityMacroControl>
                <local:WorkParametersControlTouch x:Name="workParametersControl"  Margin="3,3,0,5"
                                                     Height="300"  VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                <local:FeedControl  x:Name="feedControl"  HorizontalAlignment="Center" VerticalAlignment="Stretch"   Margin="3,3,0,5" Width="240" Height="240" />
                <local:SpindleControl x:Name="spindleControl" HorizontalAlignment="Stretch" Margin="3,3,3,5" Width="240" Height="305"  VerticalAlignment="Stretch"/>
            </StackPanel>
        </Border>
        <Border Name="FillBorder" BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Right">
            <ContentControl Name="CenterView" Content="{Binding HomeViewModel.View}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            </ContentControl>
        </Border>
    </DockPanel>
</UserControl>
